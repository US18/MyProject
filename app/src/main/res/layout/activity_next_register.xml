<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:style="@style/CardView"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="50dp"
    tools:context=".NextRegisterActivity"
    android:layout_marginRight="20dp"
    android:layout_marginStart="60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/tv_planName"
                android:text="10 Days"
                android:textAlignment="center"
                android:padding="20dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/shape"
                android:textColor="#ffffff"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"
                android:padding="16dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_inst1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_check1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_check_circle_orange_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One Time Reg. Fees"
                        android:textColor="#f4f3f3"
                        android:textSize="15sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#f4f3f3"
                        android:textStyle="bold"
                        android:layout_marginLeft="62dp"
                        android:textSize="15sp"
                        android:layout_marginStart="62dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_inst2"
                    android:layout_below="@id/ll_inst1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_check2"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_check_circle_orange_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refundable Depost"
                        android:textColor="#f4f3f3"
                        android:textSize="15sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0"
                        android:textColor="#f4f3f3"
                        android:textStyle="bold"
                        android:layout_marginLeft="63dp"
                        android:textSize="15sp"
                        android:layout_marginStart="63dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_inst3"
                    android:layout_below="@id/ll_inst2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_check3"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_check_circle_orange_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="#f4f3f3"
                        android:textSize="15sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#f4f3f3"
                        android:textStyle="bold"
                        android:layout_marginLeft="130dp"
                        android:textSize="15sp"
                        android:layout_marginStart="130dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_inst4"
                    android:layout_below="@id/ll_inst3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_check4"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_check_circle_orange_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of books at any time"
                        android:textColor="#f4f3f3"
                        android:textSize="15sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#f4f3f3"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:textSize="15sp"
                        android:layout_marginStart="30dp" />
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_choosePlan"
                android:background="@drawable/shape2"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:text="CHOOSE"
                android:textColor="#fa9e00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_terms"
                android:layout_marginTop="80dp"
                android:text="T&amp;C apply"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="110dp" />
        </LinearLayout>


        <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="110dp"
                android:text="@string/cost"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAlignment="center"
                android:background="@drawable/shape3"
                />

</android.support.v7.widget.CardView>
